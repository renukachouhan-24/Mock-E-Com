{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["deno"],
    "typeRoots": ["../node_modules/@types", "./types"]
  },
  "include": ["functions/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
